            <string>///Draw the string and the box
draw_set_alpha(0.5);
draw_roundrect_colour(x, y, x + width, y + height, c_black, c_black, false);
draw_set_alpha(1);

//Set the color of the text
draw_set_colour(c_white);

//If past the width, insert a line break
//This has to be before getting the last_space variable
if(string_width(str) &gt; width - padding - padding ) {
    //Remove the space and replace it with a line break
    msg = string_delete(msg, last_space, 1);
    msg = string_insert("#", msg, last_space);
    ds_list_add(start, last_space + 1);
}

//Make sure we have not reached the end of the message
if(count &lt; string_length(msg)) {
    //If at a space, set the last_space variable
    if(string_char_at(msg, count) == " ") {
        last_space = count;
    }
    
    count++;
}

//If we reached box maximum height, move up a line
if(string_height(str) &gt; height - padding) {
    line++;
}

//Grab the string
str = string_copy(msg, ds_list_find_value(start, line), count - ds_list_find_value(start, line));

//Draw the text
draw_text(x + padding, y + padding, str);
