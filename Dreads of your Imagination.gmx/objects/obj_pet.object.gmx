            <string>///wall collisions and apply movement

//Horizontal
if(place_meeting(x + pet_dx, y, obj_box)){
    while(!place_meeting(x + sign(pet_dx), y, obj_box)){
        x += sign(pet_dx);
    }
    pet_dx = 0;
}
//Vertical
if(place_meeting(x, y + pet_dy, obj_box)){
    while(!place_meeting(x, y + sign(pet_dy), obj_box)){
        y += sign(pet_dy);
    }
    pet_dy = 0;
